<Page
    x:Class="Lawful.Views.IniciativasTemaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:modelo="using:Lawful.Core.Modelo"
    xmlns:helpers="using:Lawful.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition />
        </TransitionCollection>
    </Page.Transitions>
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}" MinWidth="500" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" x:Name="Master">
            <ListView x:Name="IniciativasListView" ItemsSource="{x:Bind Iniciativas, Mode=TwoWay}" SelectedItem="{x:Bind Selected, Mode=TwoWay}" IsItemClickEnabled="True" ItemClick="IniciativasListView_ItemClick">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="modelo:Iniciativa">
                        <StackPanel Orientation="Horizontal" Margin="6">
                            <SymbolIcon Symbol="{x:Bind IconName}" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="{x:Bind Titulo}"  Style="{ThemeResource ListTitleStyle}"/>
                                <TextBlock Text="{x:Bind GetIniciativaType()}" Style="{StaticResource ListSubTitleStyle}" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <ScrollViewer Grid.Column="1">
            <Grid  x:Name="Detail" HorizontalAlignment="Stretch" MinWidth="250">
                <CommandBar Grid.Row="0" x:Name="AccionesBar"></CommandBar>
                <StackPanel Grid.Row="1" x:Name="spDetails"
                DataContext="{Binding SelectedItem, ElementName=IniciativasListView}"
                Margin="0,44,0,0"
                Padding="{StaticResource DetailPageMargin}">
                    <TextBlock  x:Name="tbTitulo" Text="{Binding Titulo}" Style="{ThemeResource TitleTextBlockStyle}"/>
                    <TextBlock Style="{StaticResource DetailSubTitleStyle}" Text="Descripcion" />
                    <TextBlock Style="{StaticResource DetailBodyBaseMediumStyle}" Text="{Binding Descripcion}"/>
                    <TextBlock
                    Margin="{StaticResource SmallTopMargin}"
                    Style="{StaticResource DetailSubTitleStyle}"
                    Text="¿Todos pueden editarlo?" />
                    <RadioButton Margin="4,5,0,0" IsChecked="{Binding EveryoneCanEdit}" IsEnabled="False"/>

                    <StackPanel x:Name="spAsistire" HorizontalAlignment="Left">
                        <TextBlock Margin="{StaticResource SmallTopMargin}" Style="{StaticResource DetailSubTitleStyle}" Text="Fecha del evento" />
                        <DatePicker IsEnabled="False" x:Name="dpFechaEvento" Width="400"/>
                        <TextBlock Margin="{StaticResource SmallTopMargin}" Style="{StaticResource DetailSubTitleStyle}" Text="Fecha límite de confirmación" />
                        <DatePicker IsEnabled="False" x:Name="dpFechaLimiteConfirmacion" Width="400"/>
                        <TextBlock Margin="{StaticResource SmallTopMargin}" Style="{StaticResource DetailSubTitleStyle}" Text="Lugar" />
                        <TextBox IsEnabled="False" x:Name="txtLugar"/>
                    </StackPanel>
                    <StackPanel x:Name="spDoDont" HorizontalAlignment="Left">
                        <TextBlock Margin="{StaticResource SmallTopMargin}" Style="{StaticResource DetailSubTitleStyle}" Text="Tipo" />
                        <RadioButton IsEnabled="False" x:Name="rbDo" Content="Do" Margin="4,5,0,0" IsChecked="True" GroupName="DoDont"/>
                        <RadioButton IsEnabled="False" x:Name="rbDont" Content="Don't" Margin="4,5,0,0" IsChecked="False" GroupName="DoDont"/>
                    </StackPanel>
                    <StackPanel x:Name="spRegla" HorizontalAlignment="Left">
                        <TextBlock Margin="{StaticResource SmallTopMargin}" Style="{StaticResource DetailSubTitleStyle}" Text="Relevancia" />
                        <Slider IsEnabled="False" x:Name="slRelevancia" Maximum="10" Minimum="1" Width="400"/>
                    </StackPanel>
                    <StackPanel x:Name="spVotacion" HorizontalAlignment="Left">
                        <TextBlock Margin="{StaticResource SmallTopMargin}" Style="{StaticResource DetailSubTitleStyle}" Text="Fecha límite" />
                        <DatePicker IsEnabled="False" x:Name="dpFechaLimite" Width="400"/>
                    </StackPanel>
                    <StackPanel x:Name="spVotacionMultiple" HorizontalAlignment="Left">
                        <TextBlock Margin="{StaticResource SmallTopMargin}" Style="{StaticResource DetailSubTitleStyle}" Text="Máximo de opciones seleccionables" />
                        <Slider IsEnabled="False" x:Name="slMaxOpcionesSeleccionables" Maximum="10" Minimum="1" Width="400"/>
                    </StackPanel>

                    <StackPanel x:Name="spDetailsComentarios" HorizontalAlignment="Left">
                        <TextBlock Margin="{StaticResource SmallTopMargin}" Style="{StaticResource DetailSubTitleStyle}" Text="Comentarios" />
                        <ListView x:Name="lvComentarios" ItemsSource="{x:Bind Selected.Comentarios}" SelectionMode="None" MaxHeight="800">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="modelo:Comentario">
                                    <StackPanel Margin="0,5,0,5" Width="390">
                                        <TextBlock Margin="0,0,0,4" Text="{x:Bind Owner.GetNombreCompleto()}" FontWeight="SemiBold"/>
                                        <StackPanel Padding="5" Background="{ThemeResource AppBarBackgroundThemeBrush}" Width="390" CornerRadius="5">
                                            <TextBlock Text="{x:Bind Descripcion}" TextWrapping="WrapWholeWords"/>
                                            <TextBlock TextAlignment="Right" Text="{x:Bind Fecha}" FontStyle="Italic" FontWeight="Light"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBox IsEnabled="False" Margin="0,10,0,0" x:Name="txtComentario" Width="400"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
